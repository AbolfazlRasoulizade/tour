    "@types/node": "^20.8.6",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "alpinejs": "^3.13.1",
    "cssnano": "^6.0.1",
    "esbuild": "^0.19.4",
    "eslint": "^8.51.0",
    "eslint-import-resolver-typescript": "^3.6.0",
    "eslint-plugin-import": "^2.28.1",
