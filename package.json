{
  "$schema": "https://raw.githubusercontent.com/SchemaStore/schemastore/master/src/schemas/json/package.json",
  "name": "alwatr-static-sites",
  "version": "0.0.0",
  "description": "Alwatr static sites MPA base structure",
  "main": "index.js",
  "repository": "git@github.com:njfamirm/alwatr-static-sites.git",
  "author": "Abolfazl Rasoulizade <abolfazlrasoulizade@gmail.com>",
  "license": "MIT",
  "private": true,
  "browserslist": "> 1.5%, not dead",
  "scripts": {
    "f": "yarn format",
    "s": "yarn start",
    "w": "yarn start",
    "b": "yarn build",
    "c": "yarn clean",
    "cf": "git clean -d -x -f --exclude=node_modules --exclude=cloud --exclude=.yarn",
    "cb": "run-s clean build",
    "l": "yarn lint",
    "lint": "run-s lint:ts lint:es",
    "lint:es": "eslint . --cache",
    "lint:ts": "tsc --build --pretty",
    "format": "run-s format:prettier format:eslint",
    "format:eslint": "yarn lint:es --fix",
    "format:prettier": "prettier . --ignore-path .eslintignore --write",
    "start": "eleventy --serve",
    "watch": "yarn start",
    "clean": "rm -rfv dist",
    "build": "yarn build:eleventy",
    "build:eleventy": "eleventy"
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@11ty/eleventy-img": "^3.1.1",
