{
  "npm.packageManager": "yarn",
  "lit-plugin.strict": true,
  "files.exclude": {
    "**/*.map": true,
    "**/*.d.ts": true,
    "**/*.tsbuildinfo": true
  },
  "files.associations": {
    "*.njk": "html"
  },
  "markdownlint.ignore": ["**/CHANGELOG.md"],
  "typescript.tsdk": "node_modules/typescript/lib",
  "git.autoStash": true,
  "git.branchProtection": ["base/*", "ws/*", "app/*"],
  "githubPullRequests.ignoredPullRequestBranches": ["base/*", "ws/*", "app/*"],
  "editor.wordWrapColumn": 180,
  "editor.formatOnPaste": false,
  "editor.formatOnSave": false,
  "editor.codeActionsOnSave": {
    "source.fixAll": true
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "prettier.useEditorConfig": true,
  "cSpell.language": "en,fa,fa-IR",
  "cSpell.ignoreRegExpList": ["{% end.*%}"],
  "cSpell.words": [
    "alpinejs",
    "alwatr",
    "cssnano",
    "esbuild",
    "publistore",
    "shortcode",
    "stringifyable",
    "tailwindcss"
  ]
}
